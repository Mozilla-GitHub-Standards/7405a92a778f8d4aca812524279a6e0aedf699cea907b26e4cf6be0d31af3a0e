#!/bin/bash

function usage() {
  echo "Usage: $0 [yyyyMMdd] [yyyyMMdd] [resume-num]"
  exit 1
}

# Print usage if incorrect number of args
[[ $# -gt 3 ]] && usage

START_DATE=$1
STOP_DATE=$2
RESUME_NUM="-1"
if [ $# -eq 3 ]; then
    RESUME_NUM=$3
fi

if [ "$START_DATE" == "" ]; then
    START_DATE="`date +%Y%m%d --date="1 day ago"`"
fi
if [ "$STOP_DATE" == "" ]; then
    STOP_DATE="`date +%Y%m%d --date="1 day ago"`"
fi

echo "Using start date: " $START_DATE
echo "Using stop date: " $STOP_DATE

bin=`dirname "$0"`
bin=`cd "$bin"; pwd`

ES_CONF_PATH="$bin/../conf/elasticsearch.yml"
SERVER_CLASS_NAME="com.mozilla.telemetry.elasticsearch.ElasticSearchIndexer"
JAVA_OPTS="-Xms1024m -Xmx2048m -XX:+UseParNewGC -XX:+UseConcMarkSweepGC -Des.config=$ES_CONF_PATH -Dtelemetry.log.dir=$bin/../logs"

# if this is a developer then use the main jar in the build directory
if [ -d $bin/../build/lib ]; then
    MAIN_JAR_PATH="$bin/../build/lib/telemetry-toolbox-*.jar"
else
    MAIN_JAR_PATH="$bin/../telemetry-toolbox-*.jar"
fi

CLASSPATH="$bin/../conf"
# add main jar
for lib in `ls $MAIN_JAR_PATH`; do
    CLASSPATH=${CLASSPATH}:$lib
done    

# add dependency libs
for lib in `ls $bin/../lib/*.jar`; do
    CLASSPATH=${CLASSPATH}:$lib
done

# create logs dir if it doesn't exist
if [ ! -d $bin/../logs ]; then
    mkdir -p $bin/../logs
fi

java $JAVA_OPTS -cp $CLASSPATH $SERVER_CLASS_NAME $START_DATE $STOP_DATE $RESUME_NUM
RETVAL=$?

exit $RETVAL
